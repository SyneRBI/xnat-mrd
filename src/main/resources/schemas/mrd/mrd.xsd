<xs:schema targetNamespace="http://ptb.de/mrd" xmlns:mrd="http://ptb.de/mrd"
		   xmlns:xnat="http://nrg.wustl.edu/xnat"
		   xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:import namespace="http://nrg.wustl.edu/xnat" schemaLocation="../xnat/xnat.xsd"/>
	<xs:element name="mrIsmrmrdScanData" type="mrd:mrIsmrmrdScanData"/>

	<xs:complexType name="mrIsmrmrdScanData">
		<xs:annotation>
			<xs:documentation>Information about an individual MR raw data scan.</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
			<xs:extension base="xnat:imageScanData">
				<xs:sequence>
					<xs:element maxOccurs="1" minOccurs="1" name="trajectory" type="trajectoryType" />
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>


	<xs:simpleType name="trajectoryType">
	<xs:restriction base="xs:string">
		<xs:enumeration value="cartesian" />
		<xs:enumeration value="epi" />
		<xs:enumeration value="radial" />
		<xs:enumeration value="goldenangle" />
		<xs:enumeration value="spiral" />
		<xs:enumeration value="other" />
	</xs:restriction>
	</xs:simpleType>

</xs:schema>